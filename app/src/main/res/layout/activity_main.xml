    <Button
        android:id="@+id/Number1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_1"
        android:text="@string/_1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F8FDFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_E"
        app:layout_constraintEnd_toStartOf="@+id/guideline_2"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toTopOf="@+id/guideline_D" />

    <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_minus"
        android:text="@string/_minus"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EFEFEF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_D"
        app:layout_constraintEnd_toStartOf="@+id/guideline_5"
        app:layout_constraintStart_toStartOf="@+id/guideline_4"
        app:layout_constraintTop_toTopOf="@+id/guideline_C" />

    <Button
        android:id="@+id/Number6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_6"
