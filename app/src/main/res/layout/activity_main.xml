        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EDEDED"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_D"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_3"
        app:layout_constraintTop_toBottomOf="@+id/Number9" />

    <Button
        android:id="@+id/Number5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_5"
        android:text="@string/_5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#E8E8E8"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_D"
        app:layout_constraintEnd_toStartOf="@+id/guideline_3"
        app:layout_constraintStart_toStartOf="@+id/guideline_2"
        app:layout_constraintTop_toTopOf="@+id/guideline_C" />

    <Button
        android:id="@+id/Number2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_2"
        android:text="@string/_2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F5FEFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_E"
        app:layout_constraintEnd_toStartOf="@+id/guideline_3"
        app:layout_constraintStart_toStartOf="@+id/guideline_2"
        app:layout_constraintTop_toTopOf="@+id/guideline_D" />

    <Button
        android:id="@+id/Number0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button"
        android:text="@string/_0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EBF2FF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@id/guideline_F"
        app:layout_constraintEnd_toStartOf="@+id/guideline_3"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toTopOf="@+id/guideline_E" />

    <Button
        android:id="@+id/equal_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_equal"
        android:text="@string/_equal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F9F6FF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_F"
        app:layout_constraintEnd_toStartOf="@+id/guideline_5"
        app:layout_constraintStart_toStartOf="@+id/guideline_4"
        app:layout_constraintTop_toTopOf="@+id/guideline_E" />

    <Button
        android:id="@+id/dot_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_dot"
        android:text="@string/_point"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EDF0FF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_F"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_3"
        app:layout_constraintTop_toTopOf="@+id/guideline_E" />

    <Button
        android:id="@+id/Number3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_3"
        android:text="@string/_3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F0FFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_E"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_3"
        app:layout_constraintTop_toTopOf="@+id/guideline_D" />

    <Button
        android:id="@+id/plus_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_plus"
        android:text="@string/_plus"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F6FFFD"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_E"
        app:layout_constraintEnd_toStartOf="@+id/guideline_5"
