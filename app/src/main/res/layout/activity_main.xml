        app:layout_constraintTop_toTopOf="@+id/guideline_D" />

    <Button
        android:id="@+id/multiply_multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_multiply"
        android:text="@string/x"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F4F4F4"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_C"
        app:layout_constraintEnd_toStartOf="@+id/guideline_5"
        app:layout_constraintStart_toStartOf="@+id/guideline_4"
        app:layout_constraintTop_toTopOf="@+id/guideline_B" />

    <Button
        android:id="@+id/divide_divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_divide"
        android:text="@string/_divide"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#F8F5F5"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_B"
        app:layout_constraintEnd_toStartOf="@+id/guideline_5"
        app:layout_constraintStart_toStartOf="@+id/guideline_4"
        app:layout_constraintTop_toTopOf="@+id/guideline_A" />

    <Button
        android:id="@+id/Number9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_9"
        android:text="@string/_9"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#EDEDED"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_C"
        app:layout_constraintEnd_toStartOf="@+id/guideline_4"
        app:layout_constraintStart_toStartOf="@+id/guideline_3"
        app:layout_constraintTop_toTopOf="@+id/guideline_B" />

    <Button
        android:id="@+id/Number8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/custom_button_8"
        android:text="@string/_8"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#ECEAEA"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/guideline_C"
        app:layout_constraintEnd_toStartOf="@+id/guideline_3"
        app:layout_constraintStart_toStartOf="@+id/guideline_2"
        app:layout_constraintTop_toBottomOf="@id/guideline_B" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="406dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="115dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_result"
        android:gravity="center|end"
        android:text="@string/_0"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline_A"
        app:layout_constraintEnd_toStartOf="@+id/guideline_5"
        app:layout_constraintStart_toStartOf="@+id/guideline_1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="406dp" />


</androidx.constraintlayout.widget.ConstraintLayout>